<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="2dp"
    app:bl_arrowDirection="bottom"
    app:bl_arrowHeight="15dp"
    app:bl_arrowPosition="19dp"
    app:bl_arrowWidth="20dp"
    app:bl_bubbleColor="@color/green"
    app:bl_cornersRadius="50dp"
    app:bl_strokeColor="@color/white"
    app:bl_strokeWidth="2dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:placeholderImage="@mipmap/ic_empty"
        app:placeholderImageScaleType="fitCenter"
        app:roundAsCircle="true"
        />

</com.daasuu.bl.BubbleLayout>