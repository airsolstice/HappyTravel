<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/start_bg_img">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7fbdbdbd"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 手机号"
            android:padding="10dp"
            />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 邮箱"
            android:padding="10dp"
            />


        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 6-18位数字+字母密码"
            android:inputType="textPassword"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/verify_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 确认密码"
            android:inputType="textPassword"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/input_identifying_code"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/rect_white_blue_border"
                android:hint="输入验证码"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/get_identifying_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:padding="10dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#2962ff"
                />
        </LinearLayout>

        <CheckBox
            android:id="@+id/is_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="同意并注册"/>


        <Button
            android:id="@+id/do_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        </LinearLayout>



</LinearLayout>