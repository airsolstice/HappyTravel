<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/start_bg_img"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7fbdbdbd"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:drawableLeft="@mipmap/ic_user_64"
            android:drawablePadding="10dp"
            android:hint="手机号"
            android:textSize="15sp"
            android:inputType="phone" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:drawableLeft="@mipmap/ic_email_64"
            android:drawablePadding="10dp"
            android:hint="邮箱"
            android:textSize="15sp"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:drawableLeft="@mipmap/ic_pwd_64"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:textSize="15sp"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/verify_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:drawableLeft="@mipmap/ic_pwd_verify_64"
            android:drawablePadding="10dp"
            android:hint="确认密码"
            android:textSize="15sp"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_identifying_code"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/rect_white_blue_border"
                android:hint="验证码"
                android:drawableLeft="@mipmap/ic_code_64"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/get_identifying_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#2962ff"
                android:gravity="center"
                android:padding="10dp"
                android:text="获取验证码" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/is_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="同意并注册" />


        <Button
            android:id="@+id/do_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>