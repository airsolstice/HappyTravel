<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/start_bg_img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7fbdbdbd"
        android:orientation="vertical">


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 手机号码"
            android:padding="10dp" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 6-18位数字+字母密码"
            android:inputType="textPassword"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/verify_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_white_blue_border"
            android:hint=" 确认密码"
            android:inputType="textPassword"
            android:padding="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/input_identifying_code"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/rect_white_blue_border"
                android:hint="输入验证码"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/get_identifying_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:padding="10dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="#2962ff"
                />
        </LinearLayout>

        <Button
            android:id="@+id/do_retrieve"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            android:text="下一步"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>